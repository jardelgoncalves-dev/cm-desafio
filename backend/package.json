{
  "name": "cm-api",
  "version": "1.0.0",
  "description": "Api do Desafio da Casa Mahgalh√£es",
  "main": "dist/server.js",
  "scripts": {
    "dev": "docker-compose up -d && NODE_ENV=dev nodemon src/server.js",
    "prebuild": "rimraf ./dist",
    "build": "babel src --out-dir dist",
    "start": "NODE_ENV=dev node dist/server.js",
    "premigrate": "NODE_ENV=dev sequelize db:migrate:undo:all",
    "migrate": "NODE_ENV=dev sequelize db:migrate",
    "migrate:test": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "pretest": "NODE_ENV=test npm run migrate:test",
    "test:withDocker": "docker-compose up -d && NODE_ENV=test jest --runInBand --detectOpenHandles",
    "pretest:withDocker": "NODE_ENV=test npm run migrate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.2.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@jest/globals": "^26.1.0",
    "babel-jest": "^26.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "factory-girl": "^5.0.4",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.1.0",
    "supertest": "^4.0.2"
  },
  "eslintIgnore": [
    "**/*.test.js"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
