  },
  "host": "https://lower-goose-87792.herokuapp.com/",
  "tags": [
    {
      "name": "Produtos",
      "description": "API para produtos no sistema"
    },
    {
      "name": "Lojas",
      "description": "API para lojas no sistema"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
